[colors]
;; 'material'-like backgrounds
background = #222d32
background-alt = #313d43
foreground = #dfdfdf
foreground-alt = #666666
alert = #f44336

red500 = #f44336
pink500 = #E91E63
purple500 = #9C27B0

deeppurple500 = #673AB7
indigo500 = #3f51b5
blue500 = #2196f3

lightblue500 = #03A9F4
cyan500 = #00BCD4
cyan700 = #0097a7
teal500 = #009688

green500 = #4caf50
lightgreen500 = #8bc34a
lime500 = #CDDC39

yellow500 = #FFEB3B
amber500 = #FFC107
orange500 = #ff9800

deeporange500 = #FF5722
brown500 = #795548
bluegrey500 = #607d8b

white = #ffffff
black = #000000

[bar/zauster]
; ${env:MONITOR:HDMI-1}
monitor = eDP1
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = ${colors.white}

border-size = 1
border-color = ${colors.black}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = 
modules-right = mpd separator xbacklight pulseaudio chkbd memory cpu wlan eth battery temperature date separator powermenu

tray-position = right
tray-padding = 2
;tray-transparent = true
;tray-background = ${colors.blue500}

;wm-restack = i3
;override-redirect = true
;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev
enable-ipc = true

[module/chkbd]
type = custom/ipc
; initial state is having neo
hook-0 = echo neo
; after clicking the button, we'll change
hook-1 = . /home/reitero/Dotfiles/config/polybar/chkbmap.sh
; hook-2 = . /home/reitero/Dotfiles/config/polybar/chkbmap.sh
initial = 1
click-left = polybar-msg -p %pid% hook chkbd 2
click-right = polybar-msg -p %pid% hook chkbd 2
double-click-left = polybar-msg -p %pid% hook chkbd 2

format = <output>
format-prefix = "kbd "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.blue500}

[module/separator]
type = custom/text
content = |

; "content" has the same properties as "format-NAME"
content-background = ${colors.background}
content-foreground = ${colors.amber500}
content-padding = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format = <label-layout> <label-indicator>
format-prefix = "kbd "
format-prefix-foreground = ${colors.foreground-alt}
format-prefix-underline = ${colors.blue500}

label-layout = %name% 
label-layout-underline = ${colors.blue500}
; label-indicator-padding = 2
; label-indicator-margin = 1
; label-indicator-background = ${colors.blue500}
label-indicator = %name%
label-indicator-underline = ${colors.blue500}

; https://github.com/jaagr/polybar/wiki/Module:-i3
[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
; pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.cyan700}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-underline = ${colors.cyan700}
label-focused-padding = 3

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 3

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = 3

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-background = ${colors.background}
label-urgent-padding = 3

; Separator in between workspaces
label-separator = |
label-separator-padding = 1
label-separator-foreground = ${colors.amber500}

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song-maxlen = 30
label-song-ellipsis = true

[module/xbacklight]
type = internal/xbacklight
output = eDP1

; Create scroll handlers used to set the backlight value
; Default: true
enable-scroll = true

; Available tags:
;   <label> (default);   <ramp>;   <bar>
format = <label>
format-underline = ${colors.deeppurple500}
format-prefix = "bl "
format-prefix-foreground = ${colors.foreground-alt}

; Available tokens:
;   %percentage% (default)
label = %percentage%%

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "cpu "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.red500}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "mem "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = ${colors.lightgreen500}
label = %percentage_used%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 3.0

; format-connected = <ramp-signal> <label-connected>
format-connected = <label-connected>
format-connected-underline = ${colors.indigo500}
format-connected-prefix = "wlan "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %essid%
 
format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

; ramp-signal-0 = 
; ramp-signal-1 = 
; ramp-signal-2 = 
; ramp-signal-3 = 
; ramp-signal-4 = 
; ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = enp3s0f1
interval = 3.0

